<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>The Outdoor Logbook - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-static-top" style="background-color: white">
        <div class="container">
            <img src="../../images/logo_small.jpg">
        </div>  
        </div>  
        <div class="navbar navbar-static-top">
            <div class="container">
                    <ul class="nav navbar-nav" style="font-family: Century Schoolbook; font-size: larger; font-weight: bold">
                        <li>@Html.ActionLink("Home", "Home", "Home", new { area = "" }, new { @class = "navbar" })</li> 
                        <li>@Html.ActionLink("My Logbooks", "MyLogbooks", "Logbook", new { area = "" }, null)</li> 
                        <li>@Html.ActionLink("Customise", "Settings", "Settings", new { area = "" }, null)</li> 
                    </ul>
                    @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            @RenderSection("SPAViews", required: false)
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year www.outdoorlogbook.com</p>
            </footer>
        </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("Scripts", required: false)
</body>
</html>
