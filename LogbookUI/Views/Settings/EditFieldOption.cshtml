@using Logbook.Core
@using Logbook.Core.DTO
@model LogbookUI.Models.EditFieldOptionViewModel
@{
    ViewBag.Title = "Edit Field Option";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit @Model.Text</h2>

@using (Html.BeginForm("EditFieldOption", "Settings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.FieldOptionId)

    <div class="form-group">
        @Html.LabelFor(m => m.Text, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Text)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
            <button class="btn btn-default" onclick="location.href='@Url.Action("EditActivity", "Settings", new { activityId = DataAccess.GetField(Model.FieldOptionId).ActivityId })';return false;">Cancel</button>
        </div>
    </div>
    

}
