@model LogbookUI.Models.CreateLogbookViewModel
@{
    ViewBag.Title = "New Logbook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Logbook</h2>

@using (Html.BeginForm("CreateLogbook", "Logbook", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4>Create a new Logbook</h4>
    <hr/>

    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DefaultActivityId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DefaultActivityId, new SelectList(Model.Activities, "ActivityId", "Name"), "Choose... ")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}
